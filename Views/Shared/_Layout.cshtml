<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - taxfrauders</title>
	@* import google fonts *@
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Tomorrow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/taxfrauders.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="bg-gradient-to-b from-[#1D1D1D] to-[#0F0F0F] bg-no-repeat">

	<nav class="sticky top-0 z-40 w-full backdrop-blur flex-none transition-colors duration-500 lg:z-50 lg:border-b lg:border-slate-900/10 dark:border-slate-50/[0.06] bg-white supports-backdrop-blur:bg-white/95 dark:bg-slate-900/75">
		<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
			<a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-3 rtl:space-x-reverse">
				@* <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" /> *@
				<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Taxfrauders</span>
			</a>
			<button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
				<span class="sr-only">Open main menu</span>
				<svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
					<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
				</svg>
			</button>
			<div class="flex flex-row items-center">
				<div class="hidden w-full md:block md:w-auto" id="navbar-default">
					<ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg  md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 dark:border-gray-700">
						<li>
							<a asp-area="" asp-controller="Home" asp-action="Index" class="block py-2 px-3 text-white rounded md:p-0 dark:text-white hover:text-blue-500" aria-current="page">Home</a>
						</li>
						@if (User.Identity.IsAuthenticated)
						{
							<li>
								<a asp-area="" asp-controller="Home" asp-action="Index" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Add work</a>
							</li>
						}
						
						<li>
							<a asp-area="" asp-controller="Workplaces" asp-action="Index" class="active:bg-red-500 block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Find Work</a>
						</li>
						<li>
							<a asp-area="" asp-controller="Home" asp-action="AboutUs" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">About us!</a>
						</li>
						<li>
							<a asp-area="" asp-controller="Home" asp-action="Index" class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Help</a>
						</li>
					</ul>
				</div>
				@if (!User.Identity.IsAuthenticated)
				{
					<a asp-area="" asp-controller="Login" asp-action="Index"><button class="font-semibold px-2 py-1 rounded bg-blue-600 text-white ml-8">Login</button></a>
				}
				else
				{
					<a asp-area="" asp-controller="Login" asp-action="Logout"><button class="font-semibold px-2 py-1 rounded bg-blue-600 text-white ml-8">Logout</button></a>
				}

			</div>
	</nav>

	<div class="container mx-auto text-white h-screen">
		<main role="main" class="pb-3 mt-16">
			@RenderBody()
		</main>
	</div>

	<footer class="text-white border-top border border-gray-800 p-4 mx-auto mt-48 ">
		<div class="flex flex-col gap-4 justify-center items-center w-1/2 mx-auto">
			<div class="flex flex-col gap-2 m-8 ">
				<span class="font-semibold"> © 2024 Sorsakoodi Oy. All rights reserved. </span>
				<span class="text-sm text-gray-300">
					All trademarks, logos, and brand names are the
					property of their respective owners.
				</span>
			</div>
			<div class="border-top border-gray-700 p-8 w-full flex flex-row gap-16 justify-between">
				<div class="flex flex-col gap-2">
					<span class="text-gray-500 mb-1">Product</span>
					<a href="#"><span class="underline text-gray-300">Jobs</span></a>
					<a href="#"><span class="underline text-gray-300">Offers</span></a>
					<a href="#"><span class="underline text-gray-300">Temporary work</span></a>

				</div>
				<div class="flex flex-col gap-2">
					<span class="text-gray-500 mb-1">Community</span>
					<a href="#"><span class="underline text-gray-300">Discord</span></a>
					<a href="#"><span class="underline text-gray-300">Get Support</span></a>
					<a href="#"><span class="underline text-gray-300">Experts</span></a>

				</div>
				<div class="flex flex-col gap-2">
					<span class="text-gray-500 mb-1">Learn</span>
					<a href="#"><span class="underline text-gray-300">About</span></a>
					<a href="#"><span class="underline text-gray-300">Blog</span></a>


				</div>
				<div class="flex flex-col gap-2">
					<span class="text-gray-500 mb-1">Company</span>
					<a href="#"><span class="underline text-gray-300">Careers</span></a>
					<a href="#"><span class="underline text-gray-300">Terms</span></a>
					<a href="#"><span class="underline text-gray-300">Privacy</span></a>

				</div>
			</div>
		</div>


	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
